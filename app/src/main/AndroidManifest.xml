<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mybank">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo1"
        android:label="MYBANK"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".StatsActivity" />
        <activity
            android:name=".TransferActivityforbottom"
            android:windowSoftInputMode="adjustPan|adjustResize" />
        <activity android:name=".LoanActivity" />
        <activity android:name=".LoanAcivity" />
        <activity android:name=".TransferActivity" />
        <activity android:name=".InvestmentActivity" />
        <activity android:name=".AddInvestment" />

        <activity android:name=".Authentication.LoginActivity" />
        <activity android:name=".Authentication.RegisterUser" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>